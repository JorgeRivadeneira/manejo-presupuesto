@model Cuenta
@{
    ViewData["Title"] = "Borrar una Cuenta";
}

<h3 class="mb-3">
    Está seguro que desea eliminar la cuenta: @Model.Nombre ?
</h3>

<form asp-action="BorrarCuenta">
    <input type="hidden" asp-for="Id"/>
    <button class="btn-primary btn-danger">Eliminar</button>
    <a class="btn-primary btn-secondary" asp-action="Index">Cancelar</a>
</form>
